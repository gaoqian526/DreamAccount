<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_4"
        card_view:cardElevation="2dp"
        card_view:contentPaddingBottom="@dimen/margin_4"
        card_view:contentPaddingLeft="@dimen/margin_8"
        card_view:contentPaddingRight="@dimen/margin_8"
        card_view:contentPaddingTop="@dimen/margin_4">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_dream_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_24" />

                <TextView
                    android:id="@+id/item_dream_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/blue_600"
                    android:textSize="@dimen/text_size_18" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/item_dream__status_lay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预算："
                    android:textColor="@color/black_26"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/item_dream_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:text="尚差："
                    android:textColor="@color/black_26"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/item_dream_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textSize="@dimen/text_size_18" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_dream_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:gravity="center_vertical"
                android:text="已完成"
                android:textColor="@color/blue_600"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/item_dream_des"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>